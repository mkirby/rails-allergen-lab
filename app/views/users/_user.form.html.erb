<% if flash[:error] %>
    <% flash[:error].each do |error| %>
        <p><%= error %><p>
    <% end %>
<% end%>

<%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :email %><br>
    <%= f.email_field :email %><br>
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation %><br>
    <%= f.label :experience %><br>
    <%= f.number_field :experience %><br>
    <br><%= f.submit %>
<% end %>