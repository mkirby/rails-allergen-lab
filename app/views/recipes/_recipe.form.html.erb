<% if flash[:error] %>
    <% flash[:error].each do |error| %>
        <p><%= error %><p>
    <% end %>
<% end%>

<%= form_for @recipe do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %><br>
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>